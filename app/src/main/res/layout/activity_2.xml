<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2"
    android:background="@drawable/bgapp2">

    <Button
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text=" Press for a quote : "
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/welcome"
        android:id="@+id/quote"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="PRESS FOR A BOOK RECOMMENDATION"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/quote"
        android:id="@+id/bookrec"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Horror"
        android:id="@+id/horror"
        android:layout_below="@id/bookrec"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Fantasy"
        android:id="@+id/fantasy"
        android:layout_below="@id/bookrec"
        android:layout_toRightOf="@id/horror"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Romance"
        android:id="@+id/romance"
        android:layout_below="@id/horror"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Science"
        android:id="@+id/science"
        android:layout_below="@id/horror"
        android:layout_toRightOf="@id/romance"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/recom"
        android:layout_below="@id/science"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>